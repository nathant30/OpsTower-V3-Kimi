# OpsTower Frontend - Environment Configuration

# Backend API (OpsTower V2)
# Use localhost for development, Azure URL for production
VITE_BACKEND_URL=http://localhost:8001

# Legacy Xpress API (for reference/comparison)
VITE_API_BASE_URL=https://testapi.xpress.ph
VITE_API_VERSION=v1

# Real-time SignalR (Legacy)
VITE_SIGNALR_HUB_URL=https://testapi.xpress.ph/hubs

# Feature Flags
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG=false

# Mapbox (for demand heatmap)
VITE_MAPBOX_TOKEN=your_mapbox_token_here

# Google Maps (fallback)
VITE_GOOGLE_MAPS_KEY=your_google_maps_key_here

# Traksolid Pro (Jimi/Concox) API Credentials
VITE_TRAKSOLID_API_URL=https://hk-open.tracksolidpro.com/route/rest
VITE_TRAKSOLID_ACCOUNT=your_account
VITE_TRAKSOLID_PASSWORD=your_password
VITE_TRAKSOLID_APP_KEY=your_app_key
VITE_TRAKSOLID_APP_SECRET=your_app_secret
